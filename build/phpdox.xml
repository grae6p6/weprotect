<?xml version="1.0" encoding="utf-8" ?>
<phpdox xmlns='http://xml.phpdox.net/config'>
<project name="weprotect" source="../src" workdir="${basedir}/build/api">
    <collector publiconly="false">
        <include mask="*.php" />
        <exclude mask="**/*wp-admin*"/>
        <exclude mask="**/*wp-includes*"/>
        <exclude mask="**/*wp-*.php*"/>
        <exclude mask="index.php"/>
        <exclude mask="xmlrpc.php"/>
        <exclude mask="**/*wp-content/plugins*"/>
    </collector>

    <generator output="${basedir}/build/api">
        <enrich base="${basedir}/build">
            <source type="build" />
            <source type="checkstyle" />
            <source type="pmd" />
            <source type="phploc" />
        </enrich>
        <build engine="html" enabled="true">
            <file extension="html" />
        </build>
    </generator>
</project>
</phpdox>