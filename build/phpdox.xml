<?xml version="1.0" encoding="utf-8" ?>
<phpdox xmlns='http://xml.phpdox.net/config'>
<project name="name-of-project" source="${basedir}/src" workdir="${basedir}/build/api">
    <collector publiconly="false">
        <include mask="*.php" />
    </collector>

    <generator output="${basedir}/build/api">
        <enrich base="${basedir}/build">
            <source type="build" />
            <source type="checkstyle" />
            <source type="pmd" />
            <source type="phploc" />
        </enrich>
        <build engine="html" enabled="true">
            <file extension="html" />
        </build>
    </generator>
</project>
</phpdox>